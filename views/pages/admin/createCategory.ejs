<% extend('../../admin_layout.ejs') %>
<div id="content-header">
    <div id="breadcrumb"> <a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-dashboard"></i>
            Dashboard</a> <a href="#">Categories</a> <a href="#" class="current">Create Category</a> </div>
    <h1>Create New Category</h1>
</div>
<div class="container-fluid">
    <hr>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                    <h5>Create New Category</h5>
                </div>
                <div class="widget-content nopadding">
                    <form class="form-horizontal" method="POST" action="/admin/createCategory">
                        <div class="control-group">
                            <div class="controls">
                                <input type="hidden" class="form-control" id="url" name="url" />
                            </div>
                            <div class="controls">
                                <img id="showImage" class="img-thumbnail img-responsive" style="width: 100px;" />
                            </div>
                            <div class="controls" id="upload" style="display: none;">
                                <p class="btn btn-mini btn-success">
                                    UPLOAD ICON</p>
                                <p id="progress" style="display: none;">Please wait...</p>
                            </div>
                            <label class="control-label">Select Icon</label>
                            <div class="controls">
                                <input type="file" name="file" id="file" required accept="image/*" />
                            </div>

                            <label class="control-label">Category Name</label>
                            <div class="controls">
                                <input type="text" name="name" required />
                            </div>

                            <div class="form-actions">
                                <input type="submit" value="SAVE CATEGORY" class="btn btn-success" id="submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>